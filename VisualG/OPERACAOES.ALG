algoritmo "operacaoes"

var
prompt: caractere
x, y: real

inicio
prompt <- "> "
escreval("Entre o primeiro número:")
escreva(prompt)
leia(x)
escreval("Entre o segundo número:")
escreva(prompt)
leia(y)

escreva("Soma:")
escreval(x + y)
escreva("Subtração:")
escreval(x - y)
escreva("Multiplicação:")
escreval(x * y)
escreva("Divisão:")
escreval(x / y)

fimalgoritmo